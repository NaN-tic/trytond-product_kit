<tryton>
    <data>
        <record model="ir.ui.view" id="product_view_tree">
            <field name="model">product.product</field>
            <field name="type">tree</field>
            <field name="inherit" ref="product.product_view_tree"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/tree/field[@name='type']" position="after">
                        <field name="kit"/>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="product_view_form">
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit" ref="product.product_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath expr="/form/notebook/page[@id='general']" 
                            position="after">
                        <page string='Kit' id='kit'>
                            <group colspan="4" id="kit">
                                <label name='kit'/>
                                <field name='kit'/>
                            </group>
                            <field name='kit_lines' colspan="4"/>
                        </page>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="product_kit_line_view_tree">
            <field name="model">product.kit.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Kit Lines" sequence="sequence">
                    <field name="product"/>
                    <field name="quantity"/>
                    <field name="unit"/>
                </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="product_kit_line_view_form">
            <field name="model">product.kit.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Kit Lines">
                    <label name="product"/>
                    <field name="product"/>
                    <label name="quantity"/>
                    <field name="quantity"/>
                    <label name="unit"/>
                    <field name="unit"/>
                    <label name="parent_product"/>
                    <field name="parent_product"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.model.access" id="access_product_kit">
            <field name="model" search="[('model', '=', 'product.kit.line')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>
        <record model="ir.model.access" id="access_product_kit_admin">
            <field name="model" search="[('model', '=', 'product.kit.line')]"/>
            <field name="group" ref="product.group_product_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>
    </data>
</tryton>
